<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/tv_available_on_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginBottom="10dp"
        android:text="Available on this date"
        android:background="#F0F0F5"
        android:textColor="#000"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_available_resturant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_available_on_date"
        android:layout_margin="5dp"></android.support.v7.widget.RecyclerView>




</RelativeLayout>